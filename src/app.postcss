@tailwind base;
@tailwind components;
@tailwind utilities;

body {
	font-feature-settings: 'rlig' 1, 'calt' 1;
	font-family: 'Barlow';
	overflow-x: hidden;
}

h1,
h2,
h3,
h4 {
	font-family: 'Montserrat';
}

.text-mont {
	font-family: 'Montserrat';
}

.text-barlow {
	font-family: 'Barlow';
}

.text-small-caps {
	text-shadow: 0px 6px 6px rgba(0, 0, 0, 0.25);
	line-height: normal;
	font-variant: small-caps;
	font-weight: 600;
}
